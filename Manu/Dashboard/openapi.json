{
  "openapi": "3.0.0",
  "info": {
    "title": "Admin Console Dashboard API",
    "description": "API specification for Dashboard summary, trend, payment method, alerts in Admin Console",
    "version": "1.0.0"
  },
  "paths": {
    "/api/dashboard/summary": {
      "get": {
        "summary": "Get summary widgets data for dashboard",
        "parameters": [
          {
            "name": "period",
            "in": "query",
            "description": "Summary period (daily, weekly, monthly)",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["daily", "weekly", "monthly"]
            }
          },
          {
            "name": "date",
            "in": "query",
            "description": "Start date for summary (YYYY-MM-DD)",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Dashboard summary data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "total_sales": { "type": "number", "example": 120000 },
                    "gp": { "type": "number", "example": 20000 },
                    "net_revenue": { "type": "number", "example": 15000 },
                    "total_transactions": { "type": "integer", "example": 180 },
                    "new_members": { "type": "integer", "example": 55 },
                    "active_members": { "type": "integer", "example": 580 },
                    "expiring_merchants": { "type": "integer", "example": 2 },
                    "pending_transactions": { "type": "integer", "example": 5 }
                  }
                }
              }
            }
          }
        },
        "security": [{ "bearerAuth": [] }]
      }
    },
    "/api/dashboard/sales-trend": {
      "get": {
        "summary": "Get sales trend data",
        "parameters": [
          {
            "name": "from_date",
            "in": "query",
            "description": "Start date (YYYY-MM-DD)",
            "required": true,
            "schema": { "type": "string", "format": "date" }
          },
          {
            "name": "to_date",
            "in": "query",
            "description": "End date (YYYY-MM-DD)",
            "required": true,
            "schema": { "type": "string", "format": "date" }
          },
          {
            "name": "interval",
            "in": "query",
            "description": "Interval (daily, monthly)",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["daily", "monthly"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Sales trend chart data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "labels": {
                      "type": "array",
                      "items": { "type": "string" }
                    },
                    "data": {
                      "type": "array",
                      "items": { "type": "number" }
                    }
                  }
                }
              }
            }
          }
        },
        "security": [{ "bearerAuth": [] }]
      }
    },
    "/api/dashboard/members-growth": {
      "get": {
        "summary": "Get members growth trend data",
        "parameters": [
          {
            "name": "from_date",
            "in": "query",
            "description": "Start date (YYYY-MM-DD)",
            "required": true,
            "schema": { "type": "string", "format": "date" }
          },
          {
            "name": "to_date",
            "in": "query",
            "description": "End date (YYYY-MM-DD)",
            "required": true,
            "schema": { "type": "string", "format": "date" }
          },
          {
            "name": "interval",
            "in": "query",
            "description": "Interval (daily, monthly)",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["daily", "monthly"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Members growth chart data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "labels": {
                      "type": "array",
                      "items": { "type": "string" }
                    },
                    "data": {
                      "type": "array",
                      "items": { "type": "integer" }
                    }
                  }
                }
              }
            }
          }
        },
        "security": [{ "bearerAuth": [] }]
      }
    },
    "/api/dashboard/payment-methods": {
      "get": {
        "summary": "Get payment method breakdown",
        "parameters": [
          {
            "name": "from_date",
            "in": "query",
            "description": "Start date (YYYY-MM-DD)",
            "required": false,
            "schema": { "type": "string", "format": "date" }
          },
          {
            "name": "to_date",
            "in": "query",
            "description": "End date (YYYY-MM-DD)",
            "required": false,
            "schema": { "type": "string", "format": "date" }
          }
        ],
        "responses": {
          "200": {
            "description": "Payment method pie chart data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "methods": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": { "type": "string", "example": "QR" },
                          "value": { "type": "number", "example": 60 }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "security": [{ "bearerAuth": [] }]
      }
    },
    "/api/dashboard/alerts": {
      "get": {
        "summary": "Get dashboard alerts and notifications",
        "responses": {
          "200": {
            "description": "List of alerts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "alerts": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "type": { "type": "string", "example": "merchant_expiry" },
                          "message": { "type": "string", "example": "ร้านค้าใกล้หมดอายุ 2 ราย" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "security": [{ "bearerAuth": [] }]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
